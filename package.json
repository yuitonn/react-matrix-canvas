{
  "name": "react-matrix-canvas",
  "version": "0.1.0",
  "description": "A React component library for creating interactive matrix/grid canvases with draggable markers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "fast-check": "^3.23.0",
    "jsdom": "^25.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "react",
    "matrix",
    "canvas",
    "draggable",
    "eisenhower",
    "quadrant",
    "grid",
    "drag-and-drop",
    "touch",
    "accessible"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/react-matrix-canvas.git"
  },
  "homepage": "https://github.com/YOUR_USERNAME/react-matrix-canvas#readme",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/react-matrix-canvas/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
